# ========================================
# TLAPA COMIDA - Environment Variables
# Plantilla de Ejemplo
# ========================================

# Copia este archivo como .env y completa los valores

# Application
VITE_APP_NAME=Tlapa Comida
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Plataforma de Delivery de Comida

# API Configuration (Para futuro backend)
VITE_API_URL=http://localhost:3000/api
VITE_API_TIMEOUT=10000

# WhatsApp Configuration
# Número de WhatsApp del negocio (formato: 521234567890)
VITE_WHATSAPP_BUSINESS_NUMBER=

# Google Maps API
# Obtén tu API key en: https://console.cloud.google.com/
VITE_GOOGLE_MAPS_API_KEY=

# Firebase Configuration
# Obtén tus credenciales en: https://console.firebase.google.com/
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# Payment Gateways
# Stripe: https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLIC_KEY=
# PayPal: https://developer.paypal.com/
VITE_PAYPAL_CLIENT_ID=

# App Configuration
VITE_DEFAULT_DELIVERY_FEE=20
VITE_MIN_ORDER_AMOUNT=50
VITE_MAX_DELIVERY_DISTANCE=10

# Feature Flags
VITE_ENABLE_GEOLOCATION=true
VITE_ENABLE_WHATSAPP_SHARE=true
VITE_ENABLE_RATINGS=true
VITE_ENABLE_NOTIFICATIONS=true

# Development
VITE_DEBUG_MODE=false
VITE_SHOW_CONSOLE_LOGS=false

# Social Login
# Google: https://console.cloud.google.com/
VITE_GOOGLE_CLIENT_ID=
# Facebook: https://developers.facebook.com/
VITE_FACEBOOK_APP_ID=

# Analytics
VITE_GOOGLE_ANALYTICS_ID=
VITE_MIXPANEL_TOKEN=

# Email Service
VITE_SENDGRID_API_KEY=
VITE_EMAIL_FROM=noreply@tlapacomida.com

# SMS Service (Twilio)
VITE_TWILIO_ACCOUNT_SID=
VITE_TWILIO_AUTH_TOKEN=
VITE_TWILIO_PHONE_NUMBER=

# Image Upload (Cloudinary)
VITE_CLOUDINARY_CLOUD_NAME=
VITE_CLOUDINARY_UPLOAD_PRESET=

# Security (CAMBIAR EN PRODUCCIÓN)
VITE_JWT_SECRET=change-this-secret-key
VITE_ENCRYPTION_KEY=change-this-encryption-key

# Rate Limiting
VITE_RATE_LIMIT_WINDOW=15
VITE_RATE_LIMIT_MAX_REQUESTS=100
